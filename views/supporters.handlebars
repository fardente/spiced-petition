<ul>
    {{#each supporters}}
        <li><p>
                {{#if homepage}}
                    <a href="{{homepage}}">{{firstname}} {{lastname}}</a>
                {{else}}
                    {{firstname}}
                    {{lastname}}
                {{/if}}
                {{#if age}}{{age}}{{/if}}
                <a href="/supporters/{{city}}">{{city}}</a>
            </p></li>
    {{/each}}
</ul>